jQuery(document).ready(function($) {

    // var selected_val = jQuery('select#package_name option:selected').val();
    // alert(selected_val);
    /* SUBMIT APPLICANT DISCLOSURE AUTHORIZATION */
    jQuery('select#package_name').on('change', function() {
        var ajax_url = url_obj.ajaxurl;
        var sel_pkg_name = jQuery(this).find('option:selected').text();
        var sel_pkg_price = jQuery(this).val();
        var post_id = 3107;
        jQuery("#loader").show();
        var data = {
            action: 'maxx_update_package',
            post_id: post_id,
            pkg_name: sel_pkg_name,
            pkg_price: sel_pkg_price
        }
        var posting = jQuery.post(ajax_url, data, function(response) {
            jQuery("#loader").hide();
            //alert(response);
            var obj = JSON.parse(response);
            if (obj.status == '1') {
                jQuery("#tax_section").show();
                jQuery("#calc_price").text(obj.price);
            }
        });

    });

});

